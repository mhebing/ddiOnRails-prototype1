<div class="span-24">
<h1><%= image_tag "icons/#{params["controller"]}.png", alt: "" %>
<%= @variable.title %></h2>
</div>

<hr>

<div class="span-24">
<div class="span-8">
<div class="box">
<h2>Variable</h2>
<hr>
<%= render 'info' %>
</div>

<% if can? :manage, @variable %>
<div class="box admin">
<%= link_to 'Edit', edit_variable_path(@variable) %> |
<%= link_to 'Back', variables_path %>
</div>
<% end %>
</div>

<div class="span-16 last">

<% unless @variable_statistics.blank? %>
<div class="span-8">
<h2>Statistics</h2>
<%= render 'variable_statistics/table' %>
</div>
<% end %>

<% unless @variable_categories.blank? %>
<div class="span-8 last">
<h2>Categories</h2>
<%= render 'variable_categories/table' %>
</div>
<% end %>

</div>
</div>

<hr>

<div class="span-24">

<div class="span-12">
<h2>Variable Comparison</h2>
<%= render 'comparison' %>
</div>

<% unless @variables.blank? %>
<div class="span-12 last">
<h2> Variables via Concepts </h2>
<%= render 'table' %>
</div>
<% end %>

</div>


<% unless @question.blank? %>
<hr>

<div class="span-8">
<div class="box">
<h2>Question</h2>
<hr>
<%= render 'questions/info' %>
</div>
</div>

<div class="span-8">
<h2>Answers</h2>
<%= render 'question_answers/table' %>
</div>

<div class="span-8 last">
<h2>Scales</h2>
<%= render 'question_scales/table' %>
</div>

<% end %>


