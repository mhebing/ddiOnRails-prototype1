
<div class="span-16">
<h1><%= @concept.title %></h1>
</div>

<hr>

<div class="span-8">
<div class="box">
<p>
  <b>Name:</b>
  <%= link_to @concept.name, @concept %>
</p>

<p>
  <b>Label:</b>
  <%= @concept.label %>
</p>

<p>
  <b>Abstract:</b>
  <%= @concept.abstract %>
</p>

<p>
  <b>Concept group:</b>
  <%= link_to @concept.concept_group.name, @concept.concept_group %>
</p>
</div>

<% if can? :manage, @concept %>
<%= link_to 'Edit', edit_concept_path(@concept) %> |
<%= link_to 'Back', concepts_path %>
<% end %>
</div>
