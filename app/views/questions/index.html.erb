<div class="span-24">
<h1><%= image_tag "icons/#{params["controller"]}.png", alt: "" %>
Questions</h1>
</div>

<hr>

<div class="span-8">
<div class="box">
<h2>About</h2>
<%= render 'about' %>
</div>

<% if can? :manage, Question %>
<div class="box admin">
<%= link_to 'New Question', new_question_path %>
</div>
<% end %>
</div>

<div class="span-16 last">
<h2>All Questions</h2>
<%= render 'table' %>
<%= paginate @questions %>
</div>
