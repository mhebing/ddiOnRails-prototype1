<div class="span-24">
<h1><%= @question.title %></h1>
</div>

<hr>

<div class="span-8">
<div class="box">
<p>
  <b>Name:</b>
  <%= @question.name %>
</p>

<p>
  <b>Label:</b>
  <%= @question.label %>
</p>

<p>
  <b>Fix name:</b>
  <%= @question.fix_name %>
</p>

<p>
  <b>Description:</b>
  <%= @question.description %>
</p>
</div>

<% if can? :manage, @question %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
<% end %>
</div>

<div class="span-8">
<h2>Answers</h2>
<%= render 'question_answers/table' %>
</div>

<div class="span-8 last">
<h2>Scales</h2>
<%= render 'question_scales/table' %>
</div>
